---
import { allWordPressPages } from "@lib/store";

import PrimaryLayout from "@components/layouts/primary-layout.astro";
import Hero from "./_components/Hero.astro";
import WebDesign from "./_components/WebDesign.astro";
import HowItWorks from "./_components/HowItWorks.astro";
import CTA from "./_components/CTA.astro";

const pageData = allWordPressPages.find((page) => page.slug === "colorado-springs-web-developer");
---

<PrimaryLayout
	title={pageData?.seo?.title}
	description={pageData?.seo?.description}
	canonical="/colorado-springs-web-developer/"
>
	<div class="snap-y snap-mandatory">
		<Hero />
		<WebDesign />
		<HowItWorks />
		<CTA />
	</div>
</PrimaryLayout>
