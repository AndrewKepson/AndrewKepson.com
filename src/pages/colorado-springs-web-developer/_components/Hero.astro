---
import { Image } from "astro:assets";
---

<section class="relative snap-start snap-always overflow-hidden bg-white">
	<div class="py-18">
		<div class="container mx-auto px-4">
			<div class="-mx-4 flex flex-wrap xl:items-center">
				<div class="mb-16 w-full px-4 md:mb-0 lg:w-1/2">
					<h1
						class="mb-6 text-3xl font-bold leading-tight tracking-tight text-gray-800 md:text-5xl lg:text-6xl"
					>
						Colorado Springs Web Developer Who Gets Results for Your Business
					</h1>
					<p class="mb-8 text-lg font-medium text-gray-700 md:text-xl">
						Are you looking for website development in Colorado Springs and beyond?
					</p>
					<div class="flex flex-wrap">
						<div class="w-full py-1 md:mr-4 md:w-auto md:py-0">
							<a
								href="/contact/"
								class="inline-block w-full rounded-sm border border-purple-500 bg-purple-600 px-7 py-5 text-center text-base font-medium leading-4 text-white shadow-lg hover:bg-purple-500 hover:shadow-sm focus:ring-2 md:text-lg"
							>
								Contact Me
							</a>
						</div>
						<div class="w-full py-1 md:w-auto md:py-0">
							<a
								href="/about/"
								class="hover:bg-coolGray-100 inline-block w-full rounded-sm border border-purple-600 bg-white px-7 py-5 text-center text-base font-medium leading-4 text-purple-600 shadow-lg hover:border-purple-500 hover:text-purple-500 hover:shadow-sm md:text-lg"
							>
								About Me
							</a>
						</div>
					</div>
				</div>
				<div class="w-full px-4 md:w-1/2">
					<div class="rounded-7xl relative mx-auto hidden max-w-max md:mr-0 lg:block">
						<Image
							src={import("@images/stock/web-designer-colorado-springs.jpg")}
							class="rounded-7xl relative"
							alt="Colorado Springs web development services help you stand out against the backdrop of this beautiful city."
						/>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
