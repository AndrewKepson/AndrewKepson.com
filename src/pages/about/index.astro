---
import { allWordPressPages } from "@lib/store";
import { Image } from "astro:assets";

import Layout from "@components/layouts/Layout.astro";

const pageData = allWordPressPages.find((page) => page.slug === "about");
console.log(pageData);
---

<Layout title={pageData?.seo?.title} description={pageData?.seo?.description} canonical="/about/">
	<section class="bg-white py-20 xl:pb-28 xl:pt-24">
		<div class="container mx-auto px-4">
			<div class="-mx-4 flex flex-wrap">
				<div class="mb-14 w-full px-4">
					<div class="flex flex-wrap items-center justify-between">
						<div class="mb-10 w-full lg:mb-0 lg:w-1/2">
							<h3 class="font-roboto mb-4 text-3xl font-bold tracking-tighter text-gray-900 md:text-4xl">
								About Andrew Kepson
							</h3>
							<p class="font-roboto text-2xl font-medium leading-8 text-gray-700 md:text-2xl">
								Working at the intersection of web development &amp; marketing
							</p>
						</div>
						<div class="w-full lg:w-auto">
							<div class="-mb-2 flex flex-wrap items-center lg:justify-center">
								<a
									class="font-roboto mb-2 inline-block w-full rounded-sm bg-purple-600 px-6 py-3 text-center font-medium leading-7 text-white shadow-sm hover:bg-purple-500 focus:ring-2 focus:ring-violet-500 focus:ring-opacity-50 md:mr-5 md:w-auto"
									href="/contact/"
								>
									Contact Me
								</a>
							</div>
						</div>
					</div>
				</div>
				<article
					class="prose-p:font-garamond prose-h2:font-roboto mb-5 w-full px-4 prose-h2:mb-4 prose-h2:text-2xl prose-h2:font-semibold prose-h2:text-gray-800 prose-p:mb-6 prose-p:text-lg prose-p:font-medium prose-p:leading-7 prose-p:text-gray-700 prose-a:text-purple-600 prose-a:hover:text-purple-500 prose-p:md:text-2xl lg:mb-0 lg:w-1/2 prose-h2:lg:text-3xl"
					set:html={pageData?.content}
				/>
				<div class="w-full px-4 lg:w-1/2">
					<Image
						src={import("@images/andrew-kepson-2020-portrait.png")}
						class="w-full rounded-sm shadow-lg"
						alt="Andrew Kepson is a web developer with extensive digital marketing experience based in Colorado"
						loading="lazy"
					/>
				</div>
			</div>
		</div>
	</section>
</Layout>
