---
import type { BlogPost } from "@lib/types";
import PrimaryLayout from "@components/layouts/primary-layout.astro";
import Sidebar from "./components/sidebar/sidebar.astro";
import PostContent from "./components/post-content.astro";

interface Props {
	title: string;
	description: string;
	canonical: string;
	ogImage?: string;
	noIndex?: boolean;
	schemaMarkup?: string;
	post: BlogPost["data"];
}

const { title, description, canonical, ogImage, noIndex, schemaMarkup, post } = Astro.props as Props;
---

<PrimaryLayout
	title={title}
	description={description}
	canonical={canonical}
	ogImage={ogImage}
	noIndex={noIndex}
	schemaMarkup={schemaMarkup}
>
	<div class="mx-auto grid w-full max-w-7xl grid-cols-1 gap-16 px-4 sm:px-6 lg:grid-cols-[300px_1fr] lg:px-8">
		<Sidebar post={post} />
		<PostContent post={post} />
	</div>
</PrimaryLayout>
